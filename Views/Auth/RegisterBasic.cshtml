@using AspnetCoreMvcFull.Models
@model RegisterViewModel

@{
	Layout = "_BlankLayout";
	ViewData["Title"] = "Registro - Páginas";
}

@section PageStyles {
	<link rel="stylesheet" href="~/vendor/css/pages/page-auth.css">
}

<div class="container-xxl">
	<div class="authentication-wrapper authentication-basic container-p-y">
		<div class="authentication-inner">
			<div class="card px-sm-6 px-0">
				<div class="card-body">
					<div class="app-brand justify-content-center">
						<a href="/" class="app-brand-link gap-2">
							<span class="app-brand-logo demo">@await Html.PartialAsync("../_Partials/_Macros")</span>
							<span class="app-brand-text demo text-heading fw-bold">@TempData.Peek("appName")</span>
						</a>
					</div>
					<h4 class="mb-1">¡Bienvenido a @TempData.Peek("appName")! 👋</h4>
					<p class="mb-6">Por favor, regístrate para crear una cuenta</p>

					@if (TempData["ErrorMessage"] != null)
					{
						<div class="alert alert-danger">
							@TempData["ErrorMessage"]
						</div>
					}

					<form id="formAuthentication" class="mb-6" asp-action="RegisterBasic" method="POST">
						<div class="mb-6">
							<label for="nombre" class="form-label">Nombre</label>
							<input type="text" class="form-control" id="nombre" name="Nombre" asp-for="Nombre" placeholder="Introduce tu nombre completo" required />
						</div>
						<div class="mb-6">
							<label for="email" class="form-label">Correo electrónico</label>
							<input type="email" class="form-control" id="email" name="Correo" asp-for="Correo" placeholder="Introduce tu correo electrónico" required />
						</div>
						<div class="mb-6 form-password-toggle">
							<label class="form-label" for="password">Contraseña</label>
							<div class="input-group input-group-merge">
								<input type="password" id="password" class="form-control" name="Contraseña" asp-for="Contraseña" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" required />
								<span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
							</div>
						</div>
						<div class="mb-6">
							<label for="rolId" class="form-label">Rol</label>
							<select class="form-control" id="rolId" name="IdRol" asp-for="IdRol" required>
								<option value="1">Administrador</option>
								<option value="2">Profesor</option>
								<option value="3">Alumno</option>
							</select>
						</div>
						<div class="mb-6">
							<button class="btn btn-primary d-grid w-100" type="submit">Registrarse</button>
						</div>
					</form>

					<p class="text-center">
						<span>¿Ya tienes una cuenta?</span>
						<a href="/Auth/LoginBasic">
							<span>Iniciar sesión</span>
						</a>
					</p>
				</div>
			</div>
		</div>
	</div>
</div>
