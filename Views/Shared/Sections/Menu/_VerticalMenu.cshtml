				<div>Registros</div>
			</a>
			
		</li>

		<!-- Menú para la entidad Rfid -->
		<li class='menu-item@(currentPage.StartsWith("/Rfisd") ? " active open" : "")'>
			<a href="javascript:void(0);" class="menu-link menu-toggle">
				<i class="menu-icon tf-icons bx bx-radio-circle-marked"></i>
				<div>RFID</div>
			</a>
			<ul class="menu-sub">
				<li class='menu-item@(currentPage == "/Rfids/Index" ? " active" : "")'>
					<a asp-controller="Rfids" asp-action="Index" class="menu-link">
						<div>Listado de RFID</div>
					</a>
				</li>
				
